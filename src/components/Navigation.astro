---
import {Image} from 'astro:assets'
import logo from '../icons/MSClogo2.webp'
import instagramLogo from '../icons/instagram.png'
import facebookLogo from '../icons/facebook-app-symbol.png'
---

<div class="flex bg-transparent pt-8 pb-4 backdrop-blur-sm">
    <Image src={logo} alt="Logo" class="h-auto w-80 ml-16 mr-auto"/>
    <div class="flex items-center mr-16 ml-auto space-x-12 ">
        <div class="space-x-8">
            <a href="/">Home</a>
            <a href="/about">About</a>
            <a href="/portfolio">Portfolio</a>
        </div>
        <div class="flex items-center space-x-8">
            <a href="https://www.instagram.com/themodernstaircompany/" target="_blank" rel="noopener noreferrer">
                <Image src={instagramLogo} alt="instagram logo" class="h-auto w-4"/>
            </a>
            <a href="https://www.facebook.com/Themodernstaircompany" target="_blank" rel="noopener noreferrer">
                <Image src={facebookLogo} alt="facebook logo" class="h-auto w-4"/>
            </a>
        </div>
        <a href="/contact" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-700">Contact Us</a>
    </div>
</div>